
@{
    ViewData["Title"] = "Create";
    
}

@model ManagementSystem.Models.ViewModel

<h1>إضافة موظف</h1>

<form asp-controller="Employee" asp-action="SaveCreate" method="post">
    
    <div class="form-group">
        <label asp-for="Employee.Name"></label>
        <input asp-for="Employee.Name" class="form-control" />
        <span asp-validation-for="Employee.Name" class="text-danger"></span>
    </div>
    
       <div class="form-group">
        <label>Gender</label><br />
        <label asp-for="Employee.Sex" class="radio-inline">
            <input type="radio" asp-for="Employee.Sex" value="true" /> Male
        </label>
        <label asp-for="Employee.Sex" class="radio-inline">
            <input type="radio" asp-for="Employee.Sex" value="false" /> Female
        </label>
        <span asp-validation-for="Employee.Sex" class="text-danger"></span>
       </div>
    

        <div class="form-group">
        <label asp-for="Employee.deptId" class="control-label"></label>
        <select asp-for="Employee.deptId" asp-items="Model.Departments" class="form-control">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="Employee.deptId" class="text-danger"></span>
    </div>
  
    <div class="form-group">
        <label asp-for="Employee.branchcode" class="control-label"></label>
        <select asp-for="Employee.branchcode" asp-items="Model.Branches" class="form-control">
            <option value="">-- Select Branch --</option>
        </select>
        <span asp-validation-for="Employee.branchcode" class="text-danger"></span>
    </div>
 
   <div class="form-group">
        <label asp-for="Employee.Birth_date" class="control-label"></label>
        <input asp-for="Employee.Birth_date" class="form-control" type="date" />
        <span asp-validation-for="Employee.Birth_date" class="text-danger"></span>
    </div>   
    <div class="form-group">
        <label asp-for="Employee.national_Id"></label>
        <input asp-for="Employee.national_Id" class="form-control" />
        <span asp-validation-for="Employee.national_Id" class="text-danger"></span>
    </div> 
  
    <div class="form-group">
        <label asp-for="Employee.salpermonth"></label>
        <input asp-for="Employee.salpermonth" class="form-control" type="number" />
        <span asp-validation-for="Employee.salpermonth" class="text-danger"></span>
    </div> 
    
    <div class="form-group">
        <label>USerName</label>
        <input  class="form-control" />
        <span  class="text-danger"></span>
    </div> 
    <div class="form-group">
        <label >Password</label>
        <input  class="form-control" type="password" />
        <span  class="text-danger"></span>
    </div> 

     <button type="submit" class="btn btn-primary">حفظ</button>
    <button type="button" asp-controller="Employee" asp-action="Index" class="btn btn-outline-secondary">إلغاء</button>
</form>


